<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCalc1.InfoPage"
             Title="Info">
    <VerticalStackLayout>
        <Label Text="Calculator"
               HorizontalOptions="Center" 
               FontSize="Title" 
               Margin="15"/>
        <Label Text="built in Microsoft's .NET MAUI"
               HorizontalOptions="Center" />
        <Label Text="by nyox"
               HorizontalOptions="Center" />
        <Button ImageSource="github.svg" 
                Margin="10"
                HorizontalOptions="Center" 
                Clicked="OnGitClicked"/>
    </VerticalStackLayout>
</ContentPage>